@model Product

<div class="card-body text-center">

    <h1>Details</h1>
    <img height="200" src="@Model.ImageUrl" alt="Product"/>
    <h5 class="card-title">@Model.Title</h5>
    <p class="card-text">@Model.Model</p>
    <div class="fw-bold text-success mb-2">@Model.Price $</div>
    <a href="#" class="btn btn-primary">Купити</a>
</div>
