@model List<Product>
<h1>Product Admin Panel</h1>

<a class="btn btn-primary" asp-controller="Home" asp-action="Create">Create</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Номер</th>
            <th scope="col">Ціна</th>
            <th scope="col">Фото</th>
            <th scope="col">модель</th>
            <th scope="col">кількість відгуків</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th scope="row">@i.Id</th>
                <td>
                    <img height="50" src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8cHJvZHVjdHxlbnwwfHwwfHx8MA%3D%3D" />
                </td>
                <td>@i.Title</td>
                <td>@i.Price$</td>
                <td>@i.Id</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@i.Id">Delete</a>
                </td>
            </tr>
        }
       
    </tbody>
</table>